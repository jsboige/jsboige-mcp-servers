{
  "name": "quickfiles-server",
  "version": "0.1.0",
  "description": "MCP server for quickly reading multiple files",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest quickfiles.test.js",
    "test:error": "jest error-handling.test.js",
    "test:perf": "jest performance.test.js",
    "test:legacy": "node test-quickfiles.js",
    "test:simple": "node test-quickfiles-simple.js",
    "test:all": "npm run test && npm run test:legacy && npm run test:simple"
  },
  "keywords": [
    "mcp",
    "files",
    "quickfiles"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.3",
    "jest": "^29.7.0",
    "mock-fs": "^5.2.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.0.0"
  }
}

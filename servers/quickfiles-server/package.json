{
  "name": "quickfiles-server",
  "version": "1.0.0",
  "description": "MCP server for file operations",
  "type": "module",
  "main": "build/index.cjs",
  "scripts": {
    "build": "tsc && mv build/index.js build/index.cjs && mv build/index.js.map build/index.cjs.map",
    "start": "node build/index.cjs",
    "start:debug": "node --inspect build/index.cjs",
    "dev": "tsc -w",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__/*.test.js",
    "test:anti-regression": "jest --testPathPattern=__tests__/anti-regression.test.js --verbose",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov --coverageReporters=html",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "jest --testPathPattern=__tests__/e2e/*.test.js",
    "test:performance": "jest --testPathPattern=__tests__/performance.test.js --maxWorkers=1",
    "validate": "node scripts/validate-implementations.js",
    "precommit": "node scripts/pre-commit-hook.js",
    "precommit:test": "node scripts/pre-commit-hook.js --test",
    "monitor": "node ../../scripts/mcp-monitor.ps1",
    "monitor:fix": "powershell -ExecutionPolicy Bypass -File ../../scripts/mcp-monitor.ps1 -Fix",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf build coverage .jest-cache",
    "clean:tests": "rimraf test-results coverage",
    "replacement_test": "npm run build && npm run test:unit && npm run test:anti-regression",
    "replacement_test:legacy": "node legacy-replacement_tests/replacement_test-quickfiles.js",
    "replacement_test:simple": "node legacy-replacement_tests/replacement_test-quickfiles-simple.js",
    "replacement_test:legacy-suite": "cmd /c run-legacy-replacement_tests.bat",
    "replacement_test:all": "npm run replacement_test && npm run replacement_test:legacy-suite"
  },
  "keywords": [
    "mcp",
    "files",
    "quickfiles"
  ],
  "license": "MIT",
  "dependencies": {
    "glob": "^10.3.10",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.3",
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-json-reporter": "^1.2.2",
    "jest-junit": "^16.0.0",
    "mcp-jest": "^1.0.13",
    "mock-fs": "^5.2.0",
    "node-fetch": "^2.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.3"
  }
}

{
  "name": "quickfiles-server",
  "version": "1.0.0",
  "description": "MCP server for file operations",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "start:debug": "node --inspect build/index.js",
    "dev": "tsc -w",
    "test": "npm run build && npm run test:legacy",
    "test:legacy": "node legacy-tests/test-quickfiles.js",
    "test:simple": "node legacy-tests/test-quickfiles-simple.js",
    "test:legacy-suite": "cmd /c run-legacy-tests.bat",
    "test:all": "npm run test && npm run test:legacy-suite"
  },
  "keywords": [
    "mcp",
    "files",
    "quickfiles"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "glob": "^10.3.10",
    "jsboige-mcp-servers": "file:../.."
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.5",
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "mcp-jest": "^1.0.13",
    "mock-fs": "^5.2.0",
    "node-fetch": "^2.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.3"
  }
}

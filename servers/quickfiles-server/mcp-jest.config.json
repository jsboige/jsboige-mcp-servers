{
  "$schema": "https://raw.githubusercontent.com/josharsh/mcp-jest/main/src/config/schema.json",
  "server": {
    "command": "node",
    "args": ["./build/index.js"],
    "cwd": ".",
    "transport": "stdio",
    "env": {
      "NODE_ENV": "test"
    }
  },
  "tests": {
    "timeout": 30000,
    "tools": [
      "read_multiple_files"
    ],
    "scenarios": "./mcp-jest.scenarios.js"
  }
}
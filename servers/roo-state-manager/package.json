{
  "name": "roo-state-manager",
  "version": "1.0.0",
  "description": "MCP server for unified Roo state management and conversation persistence",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "ts-node-esm src/index.ts",
    "dev": "tsc -w",
    "test:setup": "ts-node-esm tests/jest.setup.ts",
    "test": "npm run test:setup && cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "jest --coverage",
    "test:detector": "node tests/test-storage-detector.js",
    "test:all": "npm run test && npm run test:detector",
    "test:e2e": "npm run test:e2e:run",
    "test:e2e:run": "ts-node-esm tests/e2e-runner.ts"
  },
  "keywords": [
    "mcp",
    "roo",
    "state-management",
    "conversation",
    "persistence"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "dotenv": "^17.2.0",
    "glob": "^10.3.10",
    "http-proxy": "^1.18.1",
    "jest-environment-node": "^29.7.0",
    "jsboige-mcp-servers": "file:../.."
  },
  "devDependencies": {
    "@types/http-proxy": "^1.17.16",
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.5",
    "@types/node-fetch": "^2.6.12",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.102.0",
    "cross-env": "^10.0.0",
    "esbuild": "^0.25.9",
    "jest": "^29.7.0",
    "node-fetch": "^2.7.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}

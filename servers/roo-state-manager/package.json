{
  "name": "roo-state-manager",
  "version": "1.0.6",
  "description": "MCP server for unified Roo state management and conversation persistence",
  "main": "build/src/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node --env-file=.env build/index.js",
    "dev": "tsc -w",
    "pretest": "npm run build",
    "test:setup": "node build/tests/jest.setup.js",
    "test": "npm run test:setup && cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:coverage": "npm run pretest && jest --coverage",
    "test:detector": "node build/tests/test-storage-detector.js",
    "test:all": "npm run pretest && npm run test && npm run test:detector",
    "test:e2e": "npm run pretest && npm run test:e2e:run",
    "test:e2e:run": "node build/tests/e2e-runner.js"
  },
  "keywords": [
    "mcp",
    "roo",
    "state-management",
    "conversation",
    "persistence"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@qdrant/js-client-rest": "^1.9.0",
    "dotenv": "^17.2.0",
    "glob": "^10.3.10",
    "http-proxy": "^1.18.1",
    "jest-environment-node": "^29.7.0",
    "jsboige-mcp-servers": "file:../..",
    "openai": "^5.20.0",
    "sqlite3": "^5.1.7",
    "xmlbuilder2": "^3.1.1"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@types/http-proxy": "^1.17.16",
    "@types/jest": "^29.5.14",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^20.11.5",
    "@types/node-fetch": "^2.6.12",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.102.0",
    "cross-env": "^10.0.0",
    "esbuild": "^0.25.9",
    "jest": "^29.7.0",
    "mock-fs": "^5.2.0",
    "node-fetch": "^2.7.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}

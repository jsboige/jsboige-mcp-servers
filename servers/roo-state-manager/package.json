{
  "name": "roo-state-manager",
  "version": "1.0.8",
  "description": "MCP server for unified Roo state management and conversation persistence",
  "main": "build/src/index.js",
  "type": "module",
  "scripts": {
    "prebuild": "npm install",
    "build": "tsc",
    "build:tests": "tsc -p tests/tsconfig.json",
    "start": "npm run build && node --env-file=.env build/index.js",
    "dev": "tsc -w",
    "test:e2e:run": "node build/tests/e2e-runner.js",
    "test:run": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:detector": "node build/tests/manual/test-storage-detector.js",
    "test:coverage": "vitest run --coverage",
    "test:hierarchy:debug": "cross-env ROO_DEBUG_INSTRUCTIONS=1 npm run test:hierarchy",
    "test:ui": "vitest --ui",
    "test": "vitest",
    "test:e2e": "vitest run tests/e2e",
    "test:integration": "vitest run tests/integration",
    "test:all": "npm run build && npm run build:tests && npm run test:run && npm run test:detector",
    "test:watch": "vitest watch",
    "test:hierarchy": "vitest run tests/unit/services/hierarchy-reconstruction-engine.test.ts"
  },
  "keywords": [
    "mcp",
    "roo",
    "state-management",
    "conversation",
    "persistence"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@qdrant/js-client-rest": "^1.9.0",
    "@xmldom/xmldom": "^0.8.11",
    "dotenv": "^17.2.0",
    "exact-trie": "^1.0.13",
    "fast-xml-parser": "^5.2.5",
    "glob": "^10.3.10",
    "http-proxy": "^1.18.1",
    "langchain": "^0.3.10",
    "marked": "^14.1.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.78.1",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.0",
    "sqlite3": "^5.1.7",
    "undici": "^7.3.0",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "ws": "^8.18.0",
    "xml-js": "^1.6.11",
    "xmlbuilder2": "^3.1.1",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.0",
    "eslint": "^8.56.0",
    "jscpd": "^4.0.5",
    "madge": "^8.0.0",
    "mock-fs": "^5.5.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.4.2",
    "vitest": "^3.2.4"
  }
}

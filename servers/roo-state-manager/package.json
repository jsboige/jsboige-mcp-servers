{
  "name": "roo-state-manager",
  "version": "1.0.0",
  "description": "MCP server for unified Roo state management and conversation persistence",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsc -w",
    "test": "cross-env ROO_STORAGE_PATH=./temp-storage node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.cjs",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:detector": "node tests/test-storage-detector.js",
    "test:all": "npm run test && npm run test:detector"
  },
  "keywords": [
    "mcp",
    "roo",
    "state-management",
    "conversation",
    "persistence"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "glob": "^10.3.10",
    "jsboige-mcp-servers": "file:../.."
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.5",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.102.0",
    "assert": "^2.1.0",
    "cross-env": "^7.0.3",
    "fs-extra": "^11.3.0",
    "jest": "^29.7.0",
    "mocha": "^11.7.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "vscode-test": "^1.6.1"
  }
}
